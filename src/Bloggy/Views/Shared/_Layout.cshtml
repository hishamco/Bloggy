@using Bloggy.Models
@using Microsoft.Extensions.Options

@inject IOptions<Blog> BlogOptions

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@BlogOptions.Value.Name - @ViewBag.Title</title>
    <environment names="Development">
        <link rel="stylesheet" href="~/styles/bootstrap.css" />
        <link rel="stylesheet" type="text/css" href="~/styles/bloggy.css" />
        <link rel="stylesheet" type="text/css" href="~/styles/simplemde.min.css" />
        <script src="~/scripts/simplemde.min.js"></script>
    </environment>
    <environment names="Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/css/bootstrap.min.css" 
              asp-fallback-href="~/styles/bootstrap.min.css" />
        <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900" rel="stylesheet" />
        <link rel="stylesheet" type="text/css" href="~/styles/bloggy.css" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
        <script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>
    </environment>
</head>
<body>
    <div class="container">
        <header>
            <img src="@BlogOptions.Value.Image" class="img-circle" />
            <h1>@BlogOptions.Value.Name</h1>
            <nav>
                <a href="/" class="active">Home</a>
                <a href="/archive">Archive</a>
                <a href="#">About</a>
                <a href="#">Contact</a>
            </nav>
        </header>
        <main>
            @RenderBody()
        </main>
        <footer>
            <p>Copyright &copy; @DateTime.UtcNow.Year <a href="#">@BlogOptions.Value.Name</a></p>
        </footer>
    </div>
    <script>
        var simplemde = new SimpleMDE({
            toolbar: ["bold", "italic", "|", "quote", "code", "link", "|", "unordered-list", "ordered-list", "|", "preview"],
            status: false
        });
    </script>
</body>
</html>