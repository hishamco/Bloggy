@using Bloggy.Models
@using Microsoft.Extensions.Options

@inject IOptions<Blog> BlogOptions

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@BlogOptions.Value.Name - @ViewBag.Title</title>
    <link rel="stylesheet" href="~/styles/bootstrap.css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/styles/bloggy.css" title="light">
</head>
<body>
    <div class="container">
        <header>
            <img src="@BlogOptions.Value.Image" class="img-circle" />
            <h1>@BlogOptions.Value.Name</h1>
            <nav>
                <a href="#" class="active">Home</a>
                <a href="#">Archive</a>
                <a href="#">About</a>
                <a href="#">Contact</a>
            </nav>
        </header>
        <main>
            @RenderBody()
        </main>
        <footer>
            <p>Copyright &copy; 2016 <a href="#">@BlogOptions.Value.Name</a></p>
        </footer>
    </div>
</body>
</html>