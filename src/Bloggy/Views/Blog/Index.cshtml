@using Bloggy.Models

@model IEnumerable<Post>

@{
    ViewBag.Title = "bloggy - Home";
}

<section>
    @foreach (var post in Model)
    {
        <article class="row">
            <h2><a href="#">@post.Title</a></h2>
            <time>@post.PublishedAt.Value.ToString("MMMM d, yyyy")</time>
            <p>@post.Excerpt</p>
        </article>
    }
</section>